{% extends 'base.html.twig' %}

{% block body %}
    <div class="heroWorkouts"></div>

    <div class="workoutsContainer">
        <h1 class="blackTitle u-mgBtm">Scheduled workouts</h1>
        <section class="info info--customer">
            <p class="info__text">
