            </p>
        </section>
        <div class="customerCal u-mgTop" data-id="{{ app.user.id }}" id="trainerWorkouts"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/trainerWorkoutsCal.js') }}"></script>
{% endblock %}