<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ "TrainMe" }}{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('/favicon.ico') }}">
    {% block canonical_meta %}{% endblock %}
</head>
<body>
<nav class="navbar">
    <a class="navbar__brand u-listNone" href="{{ path('home') }}">TrainMe</a>
    <ul class="navbar__menu u-listNone">
        <li class="navbar__item"><a href="#" class="navbar__item__link">About</a></li>
        <li class="navbar__item"><a href="{{ path('list') }}" class="navbar__item__link">Trainers</a></li>
        <li class="navbar__item"><a href="#" class="navbar__item__link">Signin / Signup</a></li>
    </ul>
</nav>
{% block body %}{% endblock %}
{% block footer %}
    <footer class="footerContainer">
        <div class="footer">
            <ul class="linkList">
                <li class="u-listNone"><a class="footer__link" href="{{ path('home') }}">Home</a></li>
                <li class="u-listNone"><a class="footer__link" href="#">About Us</a></li>
                <li class="u-listNone"><a class="footer__link" href="{{ path('list') }}">Our trainers</a></li>
                <li class="u-listNone"><a class="footer__link" href="#">FAQ</a></li>
                <li class="u-listNone"><a class="footer__link" href="#">Login / Signup</a></li>
            </ul>

            <div class="media">
                <p class="media__text">Follow us:</p>
                <ul class="mediaList">
                    <li class="u-listNone">
                        <a class="footer__link footer__link--media" href="https://facebook.com" target="_blank">
                            <i class="fab fa-facebook"></i>
                        </a>
                    </li>
                    <li class="u-listNone">
                        <a class="footer__link footer__link--media" href="https://instagram.com" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                    <li class="u-listNone">
                        <a class="footer__link footer__link--media" href="https://youtube.com" target="_blank">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <footer class="copyright">All rights reserved at Â© TrainMe 2018</footer>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>
</html>
