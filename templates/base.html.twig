<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ "TrainMe" }}{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
              integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
              crossorigin="anonymous">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    {% endblock %}
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('/favicon.ico') }}">
    {% block canonical_meta %}{% endblock %}
</head>
<body>
<nav class="navbar">
    <a class="navbar__brand u-listNone" href="{{ path('home') }}">TrainMe</a>
    <ul class="navbar__menu u-listNone">
        <li class="navbar__item"><a href="{{ path('list') }}"
                                    class="navbar__item__link{{ app.request.pathInfo == path('list')?" link--active" : null }}">Trainers</a>
        </li>
        <li class="navbar__item sublist">
            {% if app.user and is_granted('ROLE_TRAINER') %}
            <a href="#" class="navbar__item__link">{{ app.user.trainer.name }}</a>
            <ul class="login__list u-listNone">
                <li>
                    <a href="{{ path('trainer_page', {trainer : app.user.trainer.id}) }}"
                       class="login__link{{ app.request.pathInfo == path('trainer_page', {trainer : app.user.trainer.id})?" link--active" : null }}">
                        Personal page
                    </a>
                </li>
                <li><a href="{{ path('trainer_workouts') }}"
                       class="login__link{{ app.request.pathInfo == path('trainer_workouts')?" link--active" : null }}">Workouts</a>
                </li>
                <li><a href="{{ path('manage') }}"
                       class="login__link{{ app.request.pathInfo == path('manage')?" link--active" : null }}">Manage
                        schedule</a></li>
                <li><a href="{{ path('app_logout') }}" class="login__link">Log out</a></li>
            </ul>
            {% elseif app.user and is_granted('ROLE_CUSTOMER') %}
            <a href="#" class="navbar__item__link">{{ app.user.customer.name }}</a>
            <ul class="login__list u-listNone">
                <li>
                    <a href="{{ path('customer_workouts') }}"
                       class="login__link{{ app.request.pathInfo == path('customer_workouts')?" link--active" : null }}">
                        My workouts
                    </a>
                </li>
                <li><a href="{{ path('app_logout') }}" class="login__link">Log out</a></li>
            </ul>
            {% else %}
            <a href="#" class="navbar__item__link">Register</a>
            <ul class="login__list u-listNone">
                <li><a href="{{ path('app_customer_register') }}"
                       class="login__link{{ app.request.pathInfo == path('app_customer_register')?" link--active" : null }}">
                        Customer</a>
                </li>
                <li><a href="{{ path('app_trainer_register') }}"
                       class="login__link{{ app.request.pathInfo == path('app_trainer_register')?" link--active" : null }}">
                        Trainer</a>
                </li>
            </ul>
        </li>
        <li class="navbar__item sublist">
            <a href="{{ path('app_login') }}"
               class="navbar__item__link{{ app.request.pathInfo == path('app_login')?" link--active" : null }}">Log
                in</a>
        </li>
        {% endif %}
    </ul>
    <div class="navbar__toggle"><i class="fas fa-caret-down navbar__arrow"></i></div>
</nav>
{% block body %}{% endblock %}
{% block footer %}
    <footer class="footerContainer">
        <div class="footer">
            <div class="footer__container">
                <ul class="linkList">
                    <li class="u-listNone"><a class="footer__link" href="{{ path('home') }}">Home</a></li>
                    <li class="u-listNone"><a class="footer__link" href="{{ path('list') }}">Our trainers</a></li>
                    <li class="u-listNone"><a class="footer__link" href="{{ path('app_login') }}">Login</a></li>
                    <li class="u-listNone"><a class="footer__link"
                                              href="{{ path('app_customer_register') }}">Register</a></li>
                    <li class="u-listNone"><a class="footer__link"
                                              href="{{ path('app_trainer_register') }}">Trainer registration</a></li>
                </ul>

                <div class="media">
                    <p class="media__text">Follow us:</p>
                    <ul class="mediaList">
                        <li class="u-listNone">
                            <a class="footer__link footer__link--media" href="https://facebook.com" target="_blank">
                                <i class="fab fa-facebook"></i>
                            </a>
                        </li>
                        <li class="u-listNone">
                            <a class="footer__link footer__link--media" href="https://instagram.com" target="_blank">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li class="u-listNone">
                            <a class="footer__link footer__link--media" href="https://youtube.com" target="_blank">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <footer class="copyright">All rights reserved at Â© TrainMe 2018</footer>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
    <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
{% endblock %}
</body>
</html>
